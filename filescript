#!/bin/bash

# Create a new directory
mkdir myfolder

# Enter the directory
cd myfolder

# Create five 10MB files
for i in {1..5}
do
   dd if=/dev/zero of=file$i bs=10M count=1
done

#!/bin/bash

# Prompt user for confirmation before proceeding
read -p "Are you sure you want to delete the folder and all its contents? (y/n): " answer

if [ "$answer" == "y" ]; then
   # Delete the folder and all its contents
   rm -rf /path/to/folder
   echo "Folder and all its contents have been deleted."
else
   echo "Deletion cancelled."
fi

#!/bin/bash

# Create two folders
mkdir folder1
mkdir folder2

# Create 10 files in each folder with a size of 10MB
for i in {1..10}
do
  dd if=/dev/zero of=folder1/file$i bs=10M count=1
  dd if=/dev/zero of=folder2/file$i bs=10M count=1
done
